---
- hosts: all
  sudo: true
  vars:
    doc_root: {{ doc_root }}
    sys_packages: {{ sys_packages|raw }}
    php_packages: {{ php_packages|raw }}
    php_ppa: {{ php_ppa }}
    timezone: {{ timezone }}
{% if mysql_user is defined %}
    mysql_user: {{ mysql_user }}
    mysql_pass: {{ mysql_pass }}
    mysql_db: {{ mysql_db }}
{% endif %}
  roles:
{% for role in roles %}    - {{ role }}
{% endfor %}
