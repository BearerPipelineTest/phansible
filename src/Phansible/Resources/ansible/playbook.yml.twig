---
- hosts: all
  sudo: true
  vars:
    doc_root: {{ doc_root }}
    sys_packages: {{ sys_packages|raw }}
    php_packages: {{ php_packages|raw }}
    php_ppa: {{ php_ppa }}
  tasks:
{% for task in tasks %}    - include: {{ task }}/tasks/{{ task }}.yml
{% endfor %}
  handlers:
    - name: restart nginx
      service: name=nginx state=restarted

    - name: restart apache
      service: name=apache2 state=restarted