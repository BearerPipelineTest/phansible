---
- hosts: all
  sudo: true
  vars:
    doc_root: {{ doc_root }}
    sys_packages: {{ sys_packages|raw }}
    php_packages: {{ php_packages|raw }}
    php_ppa: {{ php_ppa }}
    timezone: {{ timezone }}
{% if mysql_user is defined %}
    mysql:
      -
        db: {{ mysq_user }}
        user: {{ mysql_pass }}
        pass: {{ mysql_db }}
{% endif %}
  roles:
{% for role in roles %}    - {{ role }}
{% endfor %}
