<h2 class="ui dividing header" id="section-vagrant">Vagrant - VM Settings</h2>
<section>
    <div class="ui top attached tabular menu tabs">
        <a class="active item" data-tab="options-main">
            Basic Options
        </a>
        <a class="item" data-tab="options-advanced">
            Advanced Options
        </a>
    </div>

    <div class="ui bottom attached tab active segment" data-tab="options-main">
        <h3 class="ui header">Instructions:</h3>

        <p>Choose the options for your Virtual Machine.</p>

            <div class="field">
                <label for="baseBox">Base Box:</label>

                <select id="baseBox" name="baseBox" class="select-one">
                    <option value="trusty64">Ubuntu Trusty Tahr (14.04) 64</option>
                    {% for key,info in config.boxes.virtualbox %}
                        <option value="{{ key }}">{{ info.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="two fields">
                <div class="field">
                    <label for="name">Name:</label>
                    <div class="ui left labeled input">
                        <input type="text" id="vmname" name="vmname" placeholder="Default" value="Default" />
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label for="ip_address">IP Address:</label>
                    <div class="ui left labeled input">
                        <input type="text" id="ipaddress" name="ipaddress" value="192.168.33.99" />
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label for="memory">Memory</label>
                    <div class="ui left labeled input">
                        <input type="text" id="memory" name="memory" placeholder="512" value="512" />
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label for="memory">Shared Folder</label>
                    <div class="ui left labeled input">
                        <input type="text" id="sharedfolder" name="sharedfolder" placeholder="./" value="./" />
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    <div class="ui bottom attached tab segment" data-tab="options-advanced">
        <div class="inline field">
            <div class="ui checkbox">
                <input type="checkbox" id="enable-windows" name="enable-windows" value="1" checked="checked">
                <label for="enable-windows">Include windows.sh script to enable provisioning on Windows Hosts</label>
            </div>
        </div>

        <div class="field">
            <label for="sync-type">Synced Folders Type:</label>

            <select id="sync-type" name="sync-type" class="select-one">
                <option value="NFS">NFS</option>
                <option value="vbox">VBox Default</option>
                <option value="rsync">RSync</option>
                <option value="smb">SMB</option>
            </select>
        </div>

    </div>
</section>
