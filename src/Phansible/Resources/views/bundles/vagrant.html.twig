<h2 class="ui dividing header" id="section-vagrant">Vagrant Settings</h2>
<p>Choose the options for your virtual machine.</p>
<section>
    <div class="ui piled segment">
        <div class="ui top attached black label">Vagrant / VirtualBox Options</div>
            <h3>Basic Options</h3>
            <div class="field">
                <label for="baseBox">Base Box:</label>

                <select id="baseBox" name="baseBox" class="select-one">
                    <option value="trusty64">Ubuntu Trusty Tahr (14.04) [LTS] 64</option>
                    {% for key,info in config.boxes.virtualbox %}
                        <option value="{{ key }}">{{ info.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="two fields">
                <div class="field">
                    <label for="name">Name:</label>
                    <div class="ui left labeled input">
                        <input type="text" id="vmname" name="vmname" placeholder="Default" value="Default" />
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label for="ipAddress">IP Address:</label>
                    <div class="ui left labeled input">
                        <input type="text" id="ipAddress" name="ipAddress" value="192.168.33.99" />
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label for="memory">Memory</label>
                    <div class="ui left labeled input">
                        <input type="text" id="memory" name="memory" placeholder="512" value="512" />
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label for="memory">Shared Folder</label>
                    <div class="ui left labeled input">
                        <input type="text" id="sharedFolder" name="sharedFolder" placeholder="./" value="./" />
                        <div class="ui corner label">
                            <i class="icon asterisk"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ui basic accordion">
                <div class="title">
                    <h3><i class="dropdown icon"></i> Advanced Options</h3>
                </div>
                <div class="content">
                    <div class="inline field">
                        <div class="ui checkbox">
                            <input type="checkbox" id="enableWindows" name="enableWindows" value="1" checked="checked">
                            <label for="enableWindows">Include windows.sh script to enable provisioning on Windows Hosts</label>
                        </div>
                    </div>
                    <div class="inline field">
                        <div class="ui checkbox">
                            <input type="checkbox" id="useVagrantCloud" name="useVagrantCloud" value="1" checked="checked">
                            <label for="useVagrantCloud">Use Vagrant Cloud</label>
                        </div>
                    </div>
                    <div class="field">
                        <label for="syncType">Synced Folders Type:</label>

                        <select id="syncType" name="syncType" class="select-one">
                            <option value="nfs">NFS</option>
                            <option value="0">VBox Default</option>
                            <option value="rsync">RSync</option>
                            <option value="smb">SMB</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

</section>
